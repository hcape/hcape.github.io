    head
        title Heather Cape
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        meta(name="description" content="Heather Cape - Software Engineering Portfolio")
        meta(name="author" content="Heather Cape")
        
        link(href="css/bootstrap/bootstrap-theme.css" rel="stylesheet")
        link(href="https://fonts.googleapis.com/css?family=Sarabun:600|VT323" rel="stylesheet")
